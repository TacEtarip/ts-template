{
    "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"],
    "compilerOptions": {
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es2020",
      "target": "es2015",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "importHelpers": true,
    },
    "ts-node": {
        "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"],
        "compilerOptions": {
          "resolveJsonModule": true,
          "esModuleInterop": true,
          "noImplicitAny": true,
          "module": "commonjs",
          "target": "es2015",
          "allowJs": true,
          "moduleResolution": "node",
          "allowSyntheticDefaultImports": true,
          "sourceMap": true,
          "importHelpers": true,
          }
    },
}